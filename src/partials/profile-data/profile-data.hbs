<form action="" name="profile" class="profile__content form">
    <div class="profile__item">
        <label for="profile__email" class="profile__label">Почта</label>
        <input class="profile__input" type="email" name="email" title="E-mail" id="profile__email" {{status-email}} placeholder="pochta@yandex.ru">
    </div>
    <div class="profile__item">
        <label for="profile__login" class="profile__label">Логин</label>
        <input class="profile__input" type="text" name="login" title="Логин" id="profile__login" {{status-login}} placeholder="ivanivanov">
    </div>
    <div class="profile__item">
        <label for="profile__first-name" class="profile__label">Имя</label>
        <input class="profile__input" type="text" name="first_name" title="Имя" id="profile__first-name" {{status-first_name}} placeholder="Иван">
    </div>
    <div class="profile__item">
        <label for="profile__second-name" class="profile__label">Фамилия</label>
        <input class="profile__input" type="text" name="first_name" title="Фамилия" id="profile__second-name" {{status-second_name}} placeholder="Иванов">
    </div>
    <div class="profile__item">
        <label for="profile__display-name" class="profile__label">Имя в чате</label>
        <input class="profile__input" type="text" name="display_name" title="Имя в чате" id="profile__display-name" {{status-display_name}} placeholder="Иван">
    </div>
    <div class="profile__item">
        <label for="profile__phone" class="profile__label">Имя в чате</label>
        <input class="profile__input" type="tel" name="phone" title="Фамилия" id="profile__phone" {{status-phone}} placeholder="+7 (909) 967 30 30">
    </div>
    <div class="profile__actions">
        <div class="profile__item" style="display: {{status-link-change-data}}">
            <a href="./profile-change-data.hbs" class="back-to__link">Изменить данные</a>
        </div>
        <div class="profile__item" style="display: {{status-link-change-password}}">
            <a href="./profile-change-password.hbs" class="back-to__link" {{status-link-change-password}}>Изменить пароль</a>
        </div>
        <div class="profile__item" style="display: {{status-profile-exit}}" >
            <a href="./index.hbs" class="back-to__link profile__exit">Выйти</a>
        </div>
        <div class="profile__submit" style="display: {{status-submit}};">
            {{>'button/button'}}
        </div>
    </div>
</form>
