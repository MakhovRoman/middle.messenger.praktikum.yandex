{{!< desktop}}

<section class="wrapper-autorization">
    <div class="content-autorization">
        <h1 class="content-autorization__title">Вход</h1>
        <form action="" class="content-autorization__form form">
            <div class="form__item">
                <input class="form__item-input" type="text" name="login" title="Логин" placeholder="Логин" required>
                <div class="form__item-status">Неверный логин</div>
            </div>
            <div class="form__item">
                <input class="form__item-input" type="password" name="password" title="Пароль" placeholder="Пароль" required>
                <div class="form__item-status">Неверный пароль</div>
            </div>
            {{> 'button/button'}}
            {{> 'links/back-to-reg/back-to-reg'}}
        </form>
    </div>
</section>
